<div class="container mt-4">
    <div class="tab-content mt-3">
        @model List<Handyman.Data.Entities.Profile>

        <h2 class ="mb-4 text-center">User List</h2>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>@user.Active</td>
                            <td>
                                <!-- Placeholder for action buttons, e.g., Edit or Delete -->
                                <!-- Example: Edit button -->
                                <a href="@Url.Action("Profile", "User", new { id = user.Id })" class="btn btn-primary btn-sm">Edit</a>
                                <form asp-action="Profile" asp-controller="User" asp-route-id="@user.Id" method="post">
                                    <button type="submit" class="btn btn-info btn-sm">Details</button>
                                </form>
                                @if (user.Active == true)
                                {
                                    <!-- Delete button inside a form to use POST -->
                                    <form asp-action="DeleteProfile" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                }
                                else
                                {
                                    <!-- Delete button inside a form to use POST -->
                                    <form asp-action="ActiveProfile" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Are you sure you want to activate this user?');">
                                        <button type="submit" class="btn btn-danger">Active</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

