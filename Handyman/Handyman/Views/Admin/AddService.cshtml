@model Handyman.Data.Entities.Service

@{
    ViewData["Title"] = "Add Service";
}

<h2>Add Service</h2>

<form asp-action="AddService">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Catagory" class="control-label"></label>
        <input asp-for="Catagory" class="form-control" />
        <span asp-validation-for="Catagory" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cost" class="control-label"></label>
        <input asp-for="Cost" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Create</button>
    <a asp-action="Service" class="btn btn-secondary mt-3">Back to List</a>
</form>
