@model Handyman.ViewModels.AddServiceViewModel

@{
    ViewData["Title"] = "Add Service";
}

@{
    ViewData["HideNavbar"] = true;
}
<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-4">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Admin Panel</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-action="Appointment">Appointments</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index">Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="ServiceProviders">Service Providers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Reports">Reports</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="ServiceType">Services Type</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<h2 class ="mb-4 text-center">Add Service</h2>

<form asp-action="AddService" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ServiceTypeId">Service Type</label>
        <select asp-for="ServiceTypeId" name="ServiceTypeId" asp-items="Model.ServiceTypes" class="form-control" required>
            <option value="">-- Select Service Type --</option>
        </select>
        <span asp-validation-for="ServiceTypeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cost" class="control-label"></label>
        <input asp-for="Cost" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Create</button>
    <a asp-action="ServiceList" class="btn btn-secondary mt-3">Back to List</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
