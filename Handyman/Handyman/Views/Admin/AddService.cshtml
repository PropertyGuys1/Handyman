@model Handyman.ViewModels.AddServiceViewModel

@{
    ViewData["Title"] = "Add Service";
}

<h2>Add Service</h2>

<form asp-action="AddService" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ServiceTypeId">Service Type</label>
        <select asp-for="ServiceTypeId" name="ServiceTypeId" asp-items="Model.ServiceTypes" class="form-control" required>
            <option value="">-- Select Service Type --</option>
        </select>
        <span asp-validation-for="ServiceTypeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cost" class="control-label"></label>
        <input asp-for="Cost" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Create</button>
    <a asp-action="ServiceList" class="btn btn-secondary mt-3">Back to List</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
