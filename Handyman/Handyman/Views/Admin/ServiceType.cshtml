@model IEnumerable<Handyman.Data.Entities.ServiceType>

@{
    ViewData["Title"] = "Services";
  
    ViewData["HideNavbar"] = true;
}

<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-4">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Admin Panel</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-action="Appointment">Appointments</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index">Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="ServiceProviders">Service Providers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Reports">Reports</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="ServiceType">Services Type</a>
                </li>
                <li class="nav-item">
                    <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                        <button type="submit" class="btn btn-danger text-white px-3">
                            Logout
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </div>
</nav>


<div class="container mt-4">
    <h2 class="mb-4 text-center">Services Type</h2>
    <a asp-action="AddServiceType" class="btn btn-primary">Add Service Type</a>
    <br/>
    <div class="tab-content mt-3">
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Button</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var service in Model)
                        {
                            if(service.IsDeleted == false)
                            {
                                <tr>
                                    <td>@service.Name</td>
                                    <td>@service.Description</td>
                                    <td>
                                        <!-- Details button -->
                                        <a asp-action="ServiceList" asp-route-id="@service.Id" class="btn btn-info btn-sm">Details</a>

                                        <!-- Edit button -->
                                        <a asp-action="EditServiceType" asp-route-id="@service.Id" class="btn btn-warning btn-sm">Edit</a>

                                        <!-- Delete button -->
                                        <a asp-action="DeleteServiceType" asp-route-id="@service.Id" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                    }
                    else
                    {
                        <!-- If no services, display a message spanning all columns -->
                        <tr>
                            <td colspan="3" class="text-center">No services available</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>