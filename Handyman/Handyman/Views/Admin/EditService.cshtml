@model Handyman.Data.Entities.Service

@{
    ViewData["Title"] = "Edit Service";
}

<h2>Edit Service</h2>

<form asp-action="EditService" asp-controller="Admin" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ServiceTypeId">Select Service Type</label>
        <select asp-for="ServiceTypeId" asp-items="ViewBag.ServiceTypes" class="form-control">
            <option value="">-- Select Service Type --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Cost" class="control-label"></label>
        <input asp-for="Cost" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning mt-3">Save Changes</button>
    <a asp-action="ServiceType" class="btn btn-secondary mt-3">Cancel</a>
</form>
