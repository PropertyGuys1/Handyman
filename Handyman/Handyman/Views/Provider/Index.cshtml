@{
    ViewData["HideNavbar"] = true;
}

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom shadow-sm mb-3">
    <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                @if (SignInManager.IsSignedIn(User))
                {
                    var userId = UserManager.GetUserId(User);

                    <!-- Profile Button -->
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary text-white px-3" asp-controller="Provider" asp-route-Id="@userId" asp-action="Profile">
                            Profile
                        </a>
                    </li>

                    <!-- Appointment Button -->
                    <li class="nav-item ms-2">
                        <a class="nav-link btn btn-warning text-dark px-3" asp-controller="Provider" asp-route-Id="@userId" asp-action="Appointment">
                            Appointments
                        </a>
                    </li>

                    <!-- Logout Button -->
                    <li class="nav-item ms-2">
                        <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                            <button type="submit" class="btn btn-danger text-white px-3">
                                Logout
                            </button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item ms-2">
                        <a class="nav-link btn btn-danger text-white px-3" asp-area="Identity" asp-page="/Account/Login">
                            Login
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>


<div class="container">
    <h1 class="display-4">Thank you for joining as a Service Provider</h1>
    <p class="lead">This website will help you get work for services you specialize in.</p>
</div>