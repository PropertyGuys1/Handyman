@model Handyman.Models.ProviderProfileViewModel

<h2>Edit Profile</h2>

<form asp-action="EditProfile" method="post">
    <input type="hidden" asp-for="UserId" />
    
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" type="email" required />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Availability"></label>
        <select asp-for="Availability" class="form-control">
            @foreach (var option in Model.AvailabilityOptions)
            {
                // Check if the option is selected
                var isSelected = option == Model.Availability ? "selected" : "";

                <option value="@option" isSelected>@option</option>
            }
        </select>
    </div>


    <div class="form-group">
        <label>Services Offered</label>
        <div>
            @foreach (var service in Model.ServiceOptions)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="ServicesOffered" value="@service.Id"
                    @(Model.ServicesOffered.Contains(service.Id.ToString()) ? "checked" : "") />
                    <label class="form-check-label">@service.Name</label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
