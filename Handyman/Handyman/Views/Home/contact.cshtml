@model ContactViewModel
@{
    ViewData["Title"] = "Contact Us";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-12">
            <div class="card border-0 shadow-lg rounded-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h2 class="fw-bold mb-0">Contact Us</h2>
                    <p class="mb-0 mt-2 text-white-50">We'd love to hear from you</p>
                </div>
                <div class="card-body p-4 p-md-5">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i> @ViewBag.Message
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <form asp-action="Contact" method="post" class="needs-validation" novalidate>
                        <div class="mb-4">
                            <label for="name" class="form-label fw-semibold">Full Name</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-person-fill"></i></span>
                                <input asp-for="Name" class="form-control form-control-lg" placeholder="John Doe" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="mb-4">
                            <label for="email" class="form-label fw-semibold">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-envelope-fill"></i></span>
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="email@example.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="mb-4">
                            <label for="subject" class="form-label fw-semibold">Subject</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-chat-square-text-fill"></i></span>
                                <input asp-for="Subject" class="form-control form-control-lg" placeholder="How can we help?" />
                            </div>
                            <span asp-validation-for="Subject" class="text-danger small"></span>
                        </div>
                        <div class="mb-4">
                            <label for="message" class="form-label fw-semibold">Message</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-pencil-square"></i></span>
                                <textarea asp-for="Message" class="form-control form-control-lg" rows="5" placeholder="Your detailed message..."></textarea>
                            </div>
                            <span asp-validation-for="Message" class="text-danger small"></span>
                        </div>
                        <div class="d-grid gap-2 mt-5">
                            <button type="submit" class="btn btn-primary btn-lg py-3 fw-bold">
                                <i class="bi bi-send-fill me-2"></i>Send Message
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light p-4 text-center">
                    <div class="row g-3 justify-content-center">
                        <div class="col-auto">
                            <a href="#" class="text-decoration-none text-muted">
                                <i class="bi bi-telephone-fill me-2"></i>+1 (555) 123-4567
                            </a>
                        </div>
                        <div class="col-auto">
                            <a href="#" class="text-decoration-none text-muted">
                                <i class="bi bi-geo-alt-fill me-2"></i>123 Street Address
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Form validation enhancement
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}

